#
# Clock controller drivers
#
menuconfig CLOCK_MGMT
	bool "Clock management drivers"
	help
	  Enable support for clock management drivers. These drivers provide
	  clock configuration to the system via a series of setpoints, which
	  allow drivers to configure clocks based on their desired power
	  state

if CLOCK_MGMT

module = CLOCK_MGMT
module-str = clock management
source "subsys/logging/Kconfig.template.log_config"

config CLOCK_MGMT_NOTIFY
	bool "Support clock rate change notifications"
	default y
	help
	  Support clock rate change notifications. When enabled, clock
	  consumers can register for a callback when the frequency of their
	  output clock changes.

config CLOCK_MGMT_FIXED_SOURCE
	bool "Fixed clock source driver"
	default y
	depends on DT_HAS_FIXED_CLOCK_SOURCE_ENABLED
	help
	  Fixed clock source driver, for non configurable clock sources

source "drivers/clock_mgmt/nxp_syscon/Kconfig"

endif # CLOCK_MGMT
