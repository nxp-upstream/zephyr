config MCUX_LVDS_PANEL
	bool "NXP MCUX LVDS Panel driver"
	default y
	depends on HAS_MCUX_MEDIAMIX
	depends on DT_HAS_NXP_IMX93_LDB_ENABLED
	depends on DT_HAS_NXP_LVDS_PANEL_ENABLED
	help
	  Enable driver for imx93 lvds panel.
