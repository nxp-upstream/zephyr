config MCUX_IMX93_LDB
	bool "NXP MCUX parallel display bus format driver"
	default y
	depends on HAS_MCUX_MEDIAMIX
	depends on DT_HAS_NXP_IMX93_LDB_ENABLED
	depends on CLOCK_CONTROL
	help
	  Enable driver for imx93 lvds bridge.
