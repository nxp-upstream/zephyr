/* For USBHS && USBFS */
&zephyr_udc0 {
	cdc_acm_uart0 {
		compatible = "zephyr,cdc-acm-uart";
		label = "USB CDC-ACM-UART0 zephyr_udc0";
	};

	cdc_acm_uart1 {
		compatible = "zephyr,cdc-acm-uart";
		label = "USB CDC-ACM-UART1 zephyr_udc0";
	};

	cdc_acm_uart2 {
		compatible = "zephyr,cdc-acm-uart";
		label = "USB CDC-ACM-UART1 zephyr_udc0";
	};
};

zephyr_udc1: &usb0 {
	status = "okay";
	cdc_acm_uart3 {
		compatible = "zephyr,cdc-acm-uart";
		label = "USB CDC-ACM full-speed";
	};

	cdc_acm_uart4 {
		compatible = "zephyr,cdc-acm-uart";
		label = "USB CDC-ACM full-speed";
	};

	cdc_acm_uart5 {
		compatible = "zephyr,cdc-acm-uart";
		label = "USB CDC-ACM full-speed";
	};

	cdc_acm_uart6 {
		compatible = "zephyr,cdc-acm-uart";
		label = "USB CDC-ACM full-speed";
	};

	cdc_acm_uart7 {
		compatible = "zephyr,cdc-acm-uart";
		label = "USB CDC-ACM full-speed";
	};
};

/* For UARTs test with hardware flow control */
&flexcomm1 {
	status = "okay";
};

test_uart1: &flexcomm1_lpuart1 {
	status = "okay";
	current-speed = <115200>;
	hw-flow-control;
	pinctrl-0 = < &pinmux_flexcomm1_lpuart >;
	pinctrl-names = "default";
};

&flexcomm2 {
	status = "okay";
};

test_uart2: &flexcomm2_lpuart2 {
		status = "okay";
		current-speed = <115200>;
		hw-flow-control;
		pinctrl-0 = < &pinmux_flexcomm2_lpuart >;
		pinctrl-names = "default";
};

&pinctrl {
	pinmux_flexcomm1_lpuart: pinmux_flexcomm1_lpuart {
		group0 {
			pinmux = <FC1_P0_PIO0_24>,
				<FC1_P1_PIO0_25>,
				<FC1_P2_PIO0_26>,
				<FC1_P4_PIO0_12>,
				<FC1_P5_PIO0_13>,
				<FC1_P6_PIO0_14>;
			slew-rate = "fast";
			drive-strength = "low";
			input-enable;
		};
		group1 {
			/* Pull-up CTS_b signals */
			pinmux = <FC1_P3_PIO0_27>;
			slew-rate = "fast";
			drive-strength = "low";
			input-enable;
			bias-pull-up;
		};
	};

	pinmux_flexcomm2_lpuart: pinmux_flexcomm2_lpuart {
		group0 {
			pinmux = <FC2_P0_PIO4_0>,
				<FC2_P1_PIO4_1>,
				<FC2_P2_PIO4_2>,
				<FC2_P4_PIO4_20>,
				<FC2_P5_PIO4_21>,
				<FC2_P6_PIO4_23>;
			slew-rate = "fast";
			drive-strength = "low";
			input-enable;
		};
		group1 {
			/* Pull-up CTS_b signals */
			pinmux = <FC2_P3_PIO4_3>;
			slew-rate = "fast";
			drive-strength = "low";
			input-enable;
			bias-pull-up;
		};
	};
};
