/ {
	chosen {
		/* Delete ipc chosen property where old IPM mailbox driver bellow is
		 * configured.
		 */
		/delete-property/ zephyr,ipc;
		zephyr,console = &flexcomm0;
		zephyr,shell-uart = &flexcomm0;
	};

	mbox-consumer {
		compatible = "vnd,mbox-consumer";
		mboxes = <&mbox 0>, <&mbox 1>;
		mbox-names = "tx", "rx";
	};
};

&flexcomm0 {
	status = "okay";
};

&dma0 {
	status = "okay";
};

&syscon {
	status = "okay";
};
